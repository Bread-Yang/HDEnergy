<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civAvatar"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_90"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lltContent"
            android:layout_marginTop="@dimen/margin_24"
            android:src="@drawable/home_banner" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPreviousMonth"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/icon_more_left" />

            <TextView
                android:id="@+id/tvMonth"
                style="@style/NormalTextStyle"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_30"
                tools:text="March" />

            <ImageView
                android:id="@+id/ivNextMonth"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/icon_more_right" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>