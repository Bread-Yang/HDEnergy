<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_round_corner_area_white_bg"
            >
            <hdenergy.mdground.com.hdenergy.views.ClearEditText
                android:id="@+id/cetAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="@dimen/margin_8"
                android:hint="@string/login"
                android:inputType="phone"
                android:longClickable="false"
                android:maxLength="11"
                android:paddingLeft="@dimen/margin_10"
                android:textColorHint="#999999"
                android:textSize="@dimen/text_size_16"/>

            <View style="@style/DividerHorizontalMarginSytle"/>

            <hdenergy.mdground.com.hdenergy.views.ClearEditText
                android:id="@+id/cetPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="@dimen/margin_8"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:longClickable="false"
                android:maxLength="16"
                android:paddingLeft="@dimen/margin_10"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/text_size_16"
                tools:text="222222"/>
            <View style="@style/DividerHorizontalMarginSytle"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:orientation="horizontal"
                 >
                 <hdenergy.mdground.com.hdenergy.views.ClearEditText
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:background="@null"
                     android:drawableLeft="@mipmap/ic_launcher"
                     android:drawablePadding="@dimen/margin_8"
                     android:hint="@string/auth_code"
                     android:longClickable="false"
                     android:maxLength="16"
                     android:paddingLeft="@dimen/margin_10"
                     android:textColorHint="@color/color_999999"
                     android:textSize="@dimen/text_size_16"
                     tools:text="验证码"/>
                 <View style="@style/DividerVerticalStyle"
                        android:layout_margin="@dimen/margin_4"
                     ></View>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="获取验证码"
                     android:layout_marginLeft="@dimen/margin_12"
                     android:layout_marginRight="@dimen/margin_12"
                     />
             </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_40"
            android:background="@color/colorTheme"
            android:gravity="center"
            android:text="@string/reset_password"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_18"/>

    </LinearLayout>
    </layout>