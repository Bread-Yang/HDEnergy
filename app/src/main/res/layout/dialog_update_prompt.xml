<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="268dp"
            android:paddingTop="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_26"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/date_details"
                android:lines="2"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/text_size_14"
                android:layout_marginBottom="@dimen/size_18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_version"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/text_size_14"
                android:layout_marginBottom="@dimen/margin_4"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/date_details"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/text_size_14"
                android:layout_marginBottom="12dp"
                />
            <View style="@style/DividerHorizontalMarginStyle"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/margin_26"
                android:orientation="horizontal"
                android:layout_height="@dimen/size_50">
                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textSize="@dimen/margin_16"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <View
                  style="@style/DividerVerticalStyle"
                    android:layout_margin="@dimen/margin_8"
                    />
                <TextView
                    android:id="@+id/tvUpdate"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/update"
                    android:textSize="@dimen/margin_16"
                    android:gravity="center"
                    android:textColor="@color/color_31C967"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>