<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/size_200"
               android:background="@color/color_white"
               android:gravity="center">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/civAvatar"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_margin="@dimen/margin_6"
                   android:src="@drawable/bg_pic"
                   tools:src="@drawable/bg_pic" />

           </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
              android:layout_height="@dimen/size_44"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/margin_12"
              android:orientation="vertical">

             <TextView
                style="@style/NormalTextStyle"
                 android:text="@string/basic_information" />

          </LinearLayout>

           <RelativeLayout
             style="@style/FixHeightLayoutStyle"
               android:gravity="center_vertical">

             <TextView
               style="@style/DimTextStyle"
                 android:text="@string/Name"
                 android:layout_alignParentLeft="true"/>

               <TextView
                   style="@style/NormalTextStyle"
                   tools:text="@string/basic_information"
                   android:layout_alignParentRight="true"/>

           </RelativeLayout>

           <View style="@style/DividerHorizontalStyle"/>

           <RelativeLayout
               style="@style/FixHeightLayoutStyle"
               android:gravity="center_vertical">

               <TextView
                   style="@style/DimTextStyle"
                   android:text="@string/phone_nume"
                   android:layout_alignParentLeft="true"/>
               <TextView
                   style="@style/NormalTextStyle"
                   tools:text="@string/app_name"
                   android:layout_alignParentRight="true"/>

           </RelativeLayout>

           <View style="@style/DividerHorizontalStyle"/>

           <RelativeLayout
               style="@style/FixHeightLayoutStyle"
               android:gravity="center_vertical">

               <TextView
                   style="@style/DimTextStyle"
                   android:text="@string/department"
                   android:layout_alignParentLeft="true"/>
               <TextView
                   style="@style/NormalTextStyle"
                   tools:text="@string/engineering"
                   android:layout_alignParentRight="true"/>
           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/size_44"
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/margin_12"
               android:orientation="vertical">

               <TextView
                   style="@style/NormalTextStyle"
                   android:text="@string/used_option" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/color_white"
               android:orientation="vertical">

               <RelativeLayout
                   style="@style/FixHeightLayoutStyle"
                   android:gravity="center_vertical">

                   <TextView
                       style="@style/DimTextStyle"
                       android:text="@string/used_project"
                       android:layout_alignParentLeft="true"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/icon_neet"
                       android:layout_alignParentRight="true" />

               </RelativeLayout>

               <View style="@style/DividerHorizontalStyle"/>

               <RelativeLayout
                   style="@style/FixHeightLayoutStyle"
                   android:gravity="center_vertical">

                   <TextView
                       style="@style/DimTextStyle"
                       android:text="@string/used_project"
                       android:layout_alignParentLeft="true"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/icon_neet"
                       android:layout_alignParentRight="true" />

               </RelativeLayout>

               <View style="@style/DividerHorizontalStyle"/>

               <RelativeLayout
                   style="@style/FixHeightLayoutStyle"
                   android:gravity="center_vertical">

                   <TextView
                       style="@style/DimTextStyle"
                       android:text="@string/used_project"
                       android:layout_alignParentLeft="true"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/icon_neet"
                       android:layout_alignParentRight="true" />

               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>

   </ScrollView>


</layout>