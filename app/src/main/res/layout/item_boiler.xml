<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="boiler"
            type="com.mdground.hdenergy.models.ProjectWorkFurnace" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <RelativeLayout style="@style/WhiteFixHeightLayoutStyle">

        <TextView
            style="@style/DimTextStyle"
            android:text="@{boiler.furnaceName}"
            tools:text="@string/boiler_index" />

        <TextView
            android:id="@+id/tvInputStatus"
            style="@style/WithArrowIconTextStyle"
            android:hint="@string/please_input"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

</layout>