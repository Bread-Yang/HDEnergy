<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="flow"
            type="hdenergy.mdground.com.hdenergy.models.FuelAmount" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout style="@style/TitleLayoutStyle">

            <TextView
                style="@style/TitleTextStyle"
                android:text="@string/feedstock_amount" />


        </RelativeLayout>

        <RelativeLayout style="@style/WhiteFixHeightLayoutStyle">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/supplier"

                 />

            <TextView
                style="@style/AlignRightNoPaddingTextStyle"
                android:textSize="@dimen/text_size_16"
                tools:text="12345吨" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltData"
            style="@style/WhiteFixHeightLayoutStyle"
            android:layout_marginTop="@dimen/margin_1">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/license_plate"
                />

            <TextView
                style="@style/AlignRightNoPaddingTextStyle"
                android:textSize="@dimen/text_size_16"
                tools:text="1256" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/WhiteFixHeightLayoutStyle"
            android:layout_marginTop="@dimen/margin_1">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/delivery_capacity"
                />

            <TextView
                style="@style/AlignRightNoPaddingTextStyle"
                tools:text="25631" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/WhiteFixHeightLayoutStyle"
            android:layout_marginTop="@dimen/margin_1">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/current_period_stock_with_colon" />

            <TextView
                style="@style/AlignRightNoPaddingTextStyle"
                android:textSize="@dimen/text_size_16"
                tools:text="25631" />

        </RelativeLayout>
        <RelativeLayout style="@style/WhiteFixHeightLayoutStyle">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/fuel_consumption_with_colon"

                />

            <TextView
                android:textColor="@color/color_E92C0A"
                style="@style/AlignRightNoPaddingTextStyle"
                android:textSize="@dimen/text_size_16"
                tools:text="12345吨" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltFuelAdjust"
            style="@style/WhiteFixHeightLayoutStyle"
            android:layout_marginTop="@dimen/margin_1">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/fuel_adjust_with_colon"
                />

            <TextView
                style="@style/AlignRightNoPaddingTextStyle"
                android:textSize="@dimen/text_size_16"
                tools:text="1256" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/WhiteFixHeightLayoutStyle"
            android:layout_marginTop="@dimen/margin_1">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/adjust_explain_with_colon"
                />

            <TextView
                style="@style/AlignRightNoPaddingTextStyle"
                tools:text="25631" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/WhiteFixHeightLayoutStyle"
            android:layout_marginTop="@dimen/margin_1">

            <TextView
                style="@style/DimTextStyle"
                android:text="@string/current_period_stock_with_colon" />

            <TextView
                android:textColor="@color/color_E92C0A"
                style="@style/AlignRightNoPaddingTextStyle"
                android:textSize="@dimen/text_size_16"
                tools:text="25631" />

        </RelativeLayout>



    </LinearLayout>
</layout>