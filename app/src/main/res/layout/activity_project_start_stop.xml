<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            style="@style/TitleLayoutStyle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/DimTextStyle"
                    android:text="@string/normal" />

                <View
                    android:layout_width="@dimen/size_22"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_4"
                    android:background="@color/color_31C967" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/DimTextStyle"
                    android:text="@string/maintain" />

                <View
                    android:layout_width="@dimen/size_22"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_4"
                    android:background="@color/color_ffcc00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/DimTextStyle"
                    android:text="@string/shutdown" />

                <View
                    android:layout_width="@dimen/size_22"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_4"
                    android:background="@color/color_9793fe" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

    </LinearLayout>
</layout>