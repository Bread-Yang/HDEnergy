<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
           style="@style/WhiteFixHeightLayoutStyle"
            android:gravity="center_vertical"

            android:orientation="horizontal">
               <TextView
                   android:id="@+id/tvContacts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textSize="@dimen/text_size_16"
                   tools:text="@string/yongxing"
                   android:textColor="@color/color_404040"
                   />
            <CheckBox
                android:id="@+id/cbSelector"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/selector_checkbox_contacts"
                />
        </LinearLayout>
        <View style="@style/DividerHorizontalStyle"/>
        </LinearLayout>
    </layout>