               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/project_date_expanse"
                   android:textSize="@dimen/text_size_14"
                   android:gravity="center_vertical"
                   android:textColor="@color/color_9A9A9A"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/color_404040"
                   android:textSize="@dimen/text_size_18"
                   tools:text="@string/yongxing"
                   android:layout_weight="1"
                   android:gravity="right"
                   />

           </LinearLayout>

           <View style="@style/DividerHorizontalStyle"></View>

           <LinearLayout
               style="@style/WhiteFixHeightLayoutStyle"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/expanse_detail"
                   android:textSize="@dimen/text_size_14"
